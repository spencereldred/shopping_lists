<div class="container" ng-controller="listController">
  <div class="row"></div>
  <div class="row">
    <h1> Shopping List App</h1>
  </div>

  <button class="btn btn-primary">Add List Item</button>

  <div class="row">
    <h1> Shopping List Items</h1>
  </div>
  <div ng-repeat="item in items | filter: {done: false} | orderBy: description">
    <div class="row">
      <li>{{item.description}}</li>
    </div>
  </div>

  <div class="row">
    <h1> Menu Items</h1>
  </div>
  <div ng-repeat="item in items | filter: {done: true} | orderBy: description">
    <div class="row">
      <li>{{item.description}}</li>
    </div>
  </div>
</div>